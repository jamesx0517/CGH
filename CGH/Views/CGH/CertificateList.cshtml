@model IEnumerable<CGH.Models.CertificateContent>

@{
    ViewBag.Title = "在職證明列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>在職證明列表</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Certificate.CertificateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentNO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Certificate.CertificateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentNO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberID)
        </td>
        <td>

            @Html.ActionLink("在職證明列印", "InserviceVM", new { _ID=item.ContentID }) 
 
        </td>
    </tr>
}

</table>
